{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string", "minLength": 1 },
        "tag": { "type": "string", "minLength": 1 },
        "pullPolicy": { "type": "string" },
        "pullSecrets": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of secret names for pulling images from private registry"
        }
      },
      "required": ["repository", "tag"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "annotations": {
          "type": "object",
          "description": "Additional annotations for the Service"
        }
      },
      "required": ["port"]
    },
    "labels": {
      "type": "object",
      "properties": {
        "managedBy": { "type": "string" },
        "owner": { "type": "string" },
        "dcsIngress": {
          "type": "object",
          "properties": {
            "enabled": { 
              "type": "boolean",
              "description": "Whether to create HTTPRoute (Kyverno reads this label)"
            },
            "host": { 
              "type": "string",
              "description": "Domain name (empty = auto-set by Kyverno)"
            },
            "path": { 
              "type": "string",
              "description": "URL path (e.g., '/api/v1' or '/')"
            },
            "tls": { 
              "type": "boolean",
              "description": "Enable TLS using cluster-wide certificate"
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["managedBy", "owner", "dcsIngress"]
    }
  },
  "required": ["image", "service", "labels"]
}

